<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.academicchatapplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_icon1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Academicchatapplication">
        <activity android:name=".Splash" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" android:screenOrientation="portrait"></activity>
        <activity android:name=".Home" android:screenOrientation="portrait"></activity>
        <activity android:name=".Message_p" android:screenOrientation="portrait" android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".CodeVerification" android:screenOrientation="portrait"></activity>
        <activity android:name=".TechnicalSupport" android:screenOrientation="portrait"></activity>

        <service android:name=".Service"/>
    </application>

</manifest>