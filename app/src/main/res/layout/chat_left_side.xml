<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_pimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        app:civ_border_width="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/person_icon_foreground" />

    <ImageView
        android:id="@+id/delete_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:src="@drawable/delete_icon_foreground"/>

    <ImageView
        android:id="@+id/chat_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_toRightOf="@id/chat_pimg"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/splash_icon1" />

    <TextView
        android:id="@+id/chat_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="20dp"
        android:background="@drawable/chatboxleft"/>
</RelativeLayout>